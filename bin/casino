        echo " \n";
        exit;
    }

    require_once('../vendor/autoload.php');

    echo "\n";

    use Del\Casino;;
    try {
        $casino = new Casino();
        switch($argv[1])
        {
            case 'roulette':
            default:
                $game = $casino->getRouletteTable();
                break;
        }
    }
    catch(Exception $e){
        echo "There was a problem. \n".$e->getMessage()."\n\n";
    }
    echo "\n";